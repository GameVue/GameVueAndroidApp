<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gamevue.GameVue"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".UserList"
            android:label="@string/user_list_name"></activity>
        <activity android:name=".UserProfile"
            android:label="@string/user_profile_name"></activity>
        <activity android:name=".UserAvatarGallery"
            android:label="@string/user_avatar_gallery"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name=".UserVideoGallery"
            android:label="@string/user_video_gallery"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar"></activity>
        <activity android:name=".VideoPlayer"
            android:label="@string/video_player"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
    </application>

</manifest>